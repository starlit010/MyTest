<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.grayliu.autoclawer.dao.FileSystemDao">

    <resultMap id="fileSystemMap" type="com.grayliu.autoclawer.entity.xwlbo.FileSystem">
        <id column="ID" jdbcType="INTEGER" property="id" />
        <result column="LOCATION" jdbcType="VARCHAR" property="location" />
        <result column="REAL_PATH" jdbcType="VARCHAR" property="realPath" />
        <result column="RELATIVE_PATH" jdbcType="VARCHAR" property="relativePath" />
        <result column="CONTENT" jdbcType="BLOB" property="content" />
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.grayliu.autoclawer.entity.xwlbo.FileSystem">
        insert into filesystem(location,real_path,relative_path,content) values(#{location,jdbcType=VARCHAR},#{realPath,jdbcType=VARCHAR},#{relativePath,jdbcType=VARCHAR},#{content,jdbcType=BLOB})
    </insert>

    <insert id="insertList" useGeneratedKeys="true" keyProperty="id" parameterType="java.util.List">
        insert into filesystem(location,real_path,relative_path,content) values
        <foreach collection="list" item="item" separator=",">
            (#{item.location,jdbcType=VARCHAR},#{item.realPath,jdbcType=VARCHAR},#{item.relativePath,jdbcType=VARCHAR},#{item.content,jdbcType=BLOB})
        </foreach>
    </insert>

    <select id="queryList" resultMap="fileSystemMap">
        select * from filesystem where 1 = 1
        <if test="location!=null">
            and location = #{location}
        </if>
        <if test="realPath!=null">
            and real_path = #{realPath}
        </if>
        <if test="relativePath!=null">
            and relative_path = #{relativePath}
        </if>
    </select>

    <select id="queryById" resultMap="fileSystemMap">
        select * from filesystem where id = #{id}
    </select>


</mapper>